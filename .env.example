# Planery Studio - Environment Variables
# Скопируйте этот файл в .env.local и заполните значения

# Google Analytics (опционально)
NEXT_PUBLIC_GA_ID=

# Yandex Metrika (опционально)
NEXT_PUBLIC_YM_ID=

# Платежная система (когда подключите)
# Lemon Squeezy
LEMON_SQUEEZY_API_KEY=
LEMON_SQUEEZY_STORE_ID=
NEXT_PUBLIC_LEMON_SQUEEZY_URL=

# Email сервис (для доставки шаблонов)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM=

# Site URL
NEXT_PUBLIC_SITE_URL=https://planery.studio

# Режим разработки
NODE_ENV=development
