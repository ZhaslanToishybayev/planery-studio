# Google Analytics (опционально)
NEXT_PUBLIC_GA_ID=

# Yandex Metrika (опционально)
NEXT_PUBLIC_YM_ID=

# Платежная система Robokassa
ROBOKASSA_LOGIN=
ROBOKASSA_PASSWORD1=
ROBOKASSA_PASSWORD2=
